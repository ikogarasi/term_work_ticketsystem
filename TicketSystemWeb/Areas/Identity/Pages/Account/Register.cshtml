@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-2">
    <h1 class="text-primary">@ViewData["Title"]</h1>
    <h1><a asp-area="Identity" asp-page="/Account/Login" class="text-secondary" style="text-decoration:none">Login</a></h1>
    <div class="row">
        <div class="col-md-5">
            <form id="registerForm" class="row" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating py-2">
                    <div class="btn-group" role="group" aria-label="Basic radio toggle button group" bis_skin_checked="1">
                        <div class="m-1">
                            <input type="radio" asp-for="Input.Sex" value="@Gender.Mr" class="btn-check" id="mr-radio" autocomplete="off" checked="" />
                            <label class="btn btn-outline-primary" for="mr-radio">Mr</label>
                        </div>
                        <div class="m-1">
                            <input type="radio" asp-for="Input.Sex" value="@Gender.Mrs" class="btn-check" id="mrs-radio" autocomplete="off" checked="" />
                            <label class="btn btn-outline-primary" for="mrs-radio">Mrs</label>
                        </div>
                        <div class="m-1">
                            <input type="radio" asp-for="Input.Sex" value="@Gender.Ms" class="btn-check" id="ms-radio" autocomplete="off" checked="" />
                            <label class="btn btn-outline-primary" for="ms-radio">Ms</label>
                        </div>
                    </div>
                </div>
                <div class="form-floating py-2">
                    <input asp-for="Input.FullName" class="form-control" aria-required="true" />
                    <label asp-for="Input.FullName"></label>
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>
                <div class="form-floating py-2">
                    <input asp-for="Input.Email" class="form-control" aria-required="true" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-6">
                    <input asp-for="Input.BirthDate" class="form-control" aria-required="true" />
                    <label asp-for="Input.BirthDate"></label>
                    <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-6">
                    <input asp-for="Input.Nationality" class="form-control" aria-required="true" />
                    <label asp-for="Input.Nationality"></label>
                    <span asp-validation-for="Input.Nationality" class="text-danger"></span>
                </div>
                <div class="form-floating py-2">
                    <input asp-for="Input.Password" class="form-control" aria-required="true" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating py-2">
                    <input asp-for="Input.ConfirmPassword" class="form-control" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            </form>
        </div>
